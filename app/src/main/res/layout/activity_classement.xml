<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.application.ClassementActivity">

    <TextView
        android:id="@+id/classement_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Classement Mi-Saison"
        android:textColor="#F44336"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/classement_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <ImageView
        android:id="@+id/classement_image"
        android:layout_width="442dp"
        android:layout_height="574dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toTopOf="@id/champion_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/classement_text"
        app:srcCompat="@drawable/classement_ligue_one" />

    <TextView
        android:id="@+id/champion_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Leader actuel : Olympique Lyonnais"
        android:textColor="#0B0B0B"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/classement_image"
        app:layout_constraintBottom_toTopOf="@id/relegues_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/relegues_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Relégables : Dijon FCO et Nîmes Olympique"
        android:textColor="#0B0B0B"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/champion_text"
        app:layout_constraintBottom_toTopOf="@id/promus_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/promus_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Barragiste : FC Lorient"
        android:textColor="#0B0B0B"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relegues_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>